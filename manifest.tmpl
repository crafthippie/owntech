image: crafthippie/owntech:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  - image: crafthippie/owntech:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  - image: crafthippie/owntech:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64v8
    platform:
      architecture: arm64
      variant: v8
      os: linux
