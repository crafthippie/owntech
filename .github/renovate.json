{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>webhippie/renovate:docker",
        "docker:pinDigests",
        "default:automergeDigest"
    ],
    "docker": {
        "digest": {
            "groupName": "Docker digests",
            "automerge": true
        }
    },
    "packageRules": [{
        "datasources": [
            "docker"
        ],
        "updateTypes": [
            "major",
            "minor"
        ],
        "enabled": false
    }],
    "ignoreDeps": [
        "docker/build-push-action"
    ]
}
